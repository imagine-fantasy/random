-- Set lease holder preferences for all tables
ALTER TABLE cc_cards.cardholders CONFIGURE ZONE USING lease_preferences = '[[+region=us-east-1]]';
ALTER TABLE cc_cards.card_creations CONFIGURE ZONE USING lease_preferences = '[[+region=us-east-1]]';
ALTER TABLE cc_cards.card_form_factors CONFIGURE ZONE USING lease_preferences = '[[+region=us-east-1]]';

-- Remove lease holder preferences
ALTER TABLE cc_cards.cardholders CONFIGURE ZONE USING lease_preferences = NULL;
ALTER TABLE cc_cards.card_creations CONFIGURE ZONE USING lease_preferences = NULL;
ALTER TABLE cc_cards.card_form_factors CONFIGURE ZONE USING lease_preferences = NULL;

-- To verify configurations
SHOW ZONE CONFIGURATION FOR TABLE cc_cards.cardholders;
SHOW ZONE CONFIGURATION FOR TABLE cc_cards.card_creations;
SHOW ZONE CONFIGURATION FOR TABLE cc_cards.card_form_factors;